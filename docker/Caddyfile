# WELLNESSâ€¢GLOBE Solutions
# Caddy configuration

wellnessglobe.net, www.wellnessglobe.net {
    # Set site root
    root * /var/www/html
    
    # Enable file server
    file_server
    
    # Try files - enables clean URLs
    try_files {path} {path}/ /solutions/index.html
    
    # Compression
    encode gzip zstd
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
    }
    
    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.woff2
    }
    header @static Cache-Control "public, max-age=31536000"
}
