wellnessglobe.net, www.wellnessglobe.net {
    root * /var/www/html
    file_server
    
    # Handle /solutions path
    handle /solutions* {
        try_files {path} /solutions/index.html
    }
    
    # Compression
    encode gzip zstd
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
    }
    
    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.svg *.woff2
    }
    header @static Cache-Control "public, max-age=31536000"
}
